            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="11"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="#C65B39"
